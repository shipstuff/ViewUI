{
  "title": "Fake Server Metrics",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "node_cpu_usage_percent",
          "refId": "A",
          "legendFormat": "CPU %"
        }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "node_memory_usage_percent",
          "refId": "A",
          "legendFormat": "Memory %"
        }
      ]
    },
    {
      "id": 3,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 5000 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Request Rate",
      "type": "stat",
      "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Load Average (1m)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A",
          "legendFormat": "1m load"
        },
        {
          "expr": "node_load5",
          "refId": "B",
          "legendFormat": "5m load"
        }
      ]
    },
    {
      "id": 6,
      "title": "Memory Available (GB)",
      "type": "stat",
      "gridPos": { "x": 0, "y": 12, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes / 1024 / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 2 },
              { "color": "green", "value": 4 }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Avg Response Time (ms)",
      "type": "stat",
      "gridPos": { "x": 6, "y": 12, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "http_request_duration_seconds_sum / http_request_duration_seconds_count * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Disk Used %",
      "type": "stat",
      "gridPos": { "x": 12, "y": 16, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes / node_filesystem_size_bytes)) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      }
    }
  ]
}
